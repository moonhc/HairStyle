<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_height="264dp"
    android:layout_width="297dp"
    android:layout_marginBottom="@dimen/activity_content_margin"
    android:layout_marginRight="@dimen/interval"
    android:layout_marginLeft="@dimen/interval"
    android:layout_gravity="center_horizontal"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView android:id="@+id/main_image"
            android:layout_width="198dp"
            android:layout_height="264dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            />

        <ImageView android:id="@+id/sub1_image"
            android:layout_width="99dp"
            android:layout_height="132dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/main_image"/>

        <ImageView android:id="@+id/sub2_image"
            android:layout_width="99dp"
            android:layout_height="132dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/main_image"/>

        <TextView android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/interval"
            android:paddingTop="@dimen/interval"
            android:textSize="@dimen/headline_text"
            android:textColor="#000000"
            android:background="@color/white"
            android:alpha="0.3"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
