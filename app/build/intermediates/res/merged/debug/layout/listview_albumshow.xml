<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/interval"
    android:layout_marginBottom="@dimen/interval"
    android:layout_marginRight="@dimen/activity_content_margin"
    android:layout_marginLeft="@dimen/activity_content_margin"
    android:layout_gravity="center_horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:contentPadding="@dimen/activity_content_margin"
    card_view:cardBackgroundColor="@color/b200">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/album_cover"
            android:layout_width="180dp"
            android:layout_height="270dp"
            android:layout_alignParentRight="true"/>

        <TextView android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/display1_text"
            android:layout_marginTop="@dimen/interval"
            android:layout_toLeftOf="@id/album_cover" />

        <TextView android:id="@+id/album_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subheading_text"
            android:layout_below="@id/date_text"
            android:layout_marginTop="@dimen/subheading_text"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
